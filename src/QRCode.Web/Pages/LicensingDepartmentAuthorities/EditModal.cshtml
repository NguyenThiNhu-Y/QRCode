@page
@model QRCode.Web.Pages.LicensingDepartmentAuthorities.EditModalModel
@using QRCode.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal

@inject IStringLocalizer<QRCodeResource> L

@{Layout = null;
}
<form method="post" asp-page="/LicensingDepartmentAuthorities/EditModal">
    <abp-modal size="ExtraLarge">
        <abp-modal-header>
            <abp-row>
                <abp-column>
                    <abp-modal-title style="font-weight:bold; text-transform:uppercase; font-size:20px">@L["NewLicensingDepartmentAuthorities"]</abp-modal-title>
                </abp-column>
            </abp-row>
        </abp-modal-header>
        <abp-modal-body>
            <input asp-for="Id" hidden />
            <abp-input asp-for="updateDepartment.NameDepartment" />
            <abp-select asp-for="updateDepartment.IdCategory" asp-items="Model.CategoryListItem" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>

    </abp-modal>
</form>
