@page
@using QRCode.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal

@model QRCode.Web.Pages.Categories.CreateModalModel
@inject IStringLocalizer<QRCodeResource> L

@section scripts{
    <script type="text/javascript" src="/Pages/Categories/Index.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#summernote').summernote();

        });

    </script>
}
<form method="post" asp-page="/Categories/CreateModal">
    <abp-card size="ExtraLarge">
        <abp-card-header>
            <abp-row>
                <abp-column size-md="_6">
                    <abp-card-title style="font-weight:bold; text-transform:uppercase; font-size:20px">@L["NewCategory"]</abp-card-title>
                </abp-column>
            </abp-row>
        </abp-card-header>
        <abp-card-body>
            
            <abp-input asp-for="Category.Name" required required-symbol="true" />
            <abp-select asp-for="Category.IdParent" asp-items="Model.CategoryIdFilterItems" />
            <abp-input asp-for="Category.Deadline" min="1" required />
            <div class="mb-3">
                <label class="form-label">@L["Description"]</label>
                <textarea asp-for="Category.Description" id="summernote" rows="3"></textarea>
            </div>
        </abp-card-body>
        <abp-card-footer>
            <a href="/Categories" class="btn btn-secondary">@L["Cancel"]</a>
            <button id="save" data-busy-text="Đang lưu..." class="btn btn-primary bkgrnd-cyan save-details" type="submit" name="save-details">@L["Save"]</button>
        </abp-card-footer>
    </abp-card>
</form>
